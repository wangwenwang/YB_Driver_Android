<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_whole"
    android:orientation="vertical"
    android:background="@color/track_bg"
    android:fitsSystemWindows="true">

    <com.kaidongyuan.app.basemodule.widget.SlidingTitleView
        android:id="@+id/register_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/old_psw_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/user_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户手机号码(等于登录帐号)"
                android:inputType="number"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#CCCCCC" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#E2E2E2" />
        </LinearLayout>

        <EditText
            android:id="@+id/user_psw_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请创建登录密码"
            android:inputType="textPassword"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#CCCCCC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#E2E2E2" />

        <EditText
            android:id="@+id/repeat_psw_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/repeat_password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:background="@drawable/login_btn_round_bg"
        android:text="@string/register"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>